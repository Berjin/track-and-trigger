<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_marginTop="200dp"
            android:textAlignment="center"
            android:text="Kindly verify your email"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/verify_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            app:startIconDrawable="@drawable/ic_verify">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the verification code"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_send_verification_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Verification Email"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_email_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:textSize="32sp"
        android:background="@android:color/holo_blue_light"
        android:text="Verify email"/>
</RelativeLayout>