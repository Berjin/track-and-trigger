<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/MainTheme"
    android:layout_gravity="center"
    android:background="@color/mainBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/items_edit_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/decrease_edit_count"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_minus"
            android:background="@android:color/darker_gray"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_count_edit_layout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:startIconTintMode="multiply">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_edit_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:text="@string/zero"
                android:inputType="number"
                android:hint="@string/item_count"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:id="@+id/increase_edit_count"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
_        <Button
        android:id="@+id/btn_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:text="Save"/>
    </LinearLayout>

</RelativeLayout>